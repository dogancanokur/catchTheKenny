<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dogancanokur.catchthekenny.FinalActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="397dp"
        android:layout_height="225dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/kenny_unhooded"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/highestScore"
        android:layout_width="353dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:text="Highest Score: "
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="@+id/userScore"
        app:layout_constraintStart_toStartOf="@+id/userScore"
        app:layout_constraintTop_toBottomOf="@+id/userScore" />

    <TextView
        android:id="@+id/userScore"
        android:layout_width="353dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="24dp"
        android:text="Your Score: "
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/toMainMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="toMainMenu"
        android:text="Main Manu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/highestScore"
        app:layout_constraintStart_toStartOf="@+id/highestScore"
        app:layout_constraintTop_toBottomOf="@+id/highestScore" />

</androidx.constraintlayout.widget.ConstraintLayout>
